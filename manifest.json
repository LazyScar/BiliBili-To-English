{
  "manifest_version": 3,
  "name": "BiliBili To English",
  "version": "1.5.2",
  "description": "Translate BiliBili content to multiple languages including English, French, Russian and more.",
  "author": "LazyScar",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "optional_permissions": [
    "tabs"
  ],
  "host_permissions": [
    "https://*.bilibili.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.bilibili.com/*"
      ],
      "js": [
        "languages/en.js",
        "languages/fr.js",
        "languages/ru.js",
        "languages/languageManager.js",
        "main.js"
      ],
      "run_at": "document_start"
    }
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "bilibili-translator@bilibili.com",
      "strict_min_version": "109.0"
    }
  }
}
